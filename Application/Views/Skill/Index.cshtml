@model IEnumerable<SkillViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="card">
<div class="card-title text-center mt-4"><h4 class="">Skill list</h4></div>
<div class="card-body">

<p>
    <a asp-action="AddEdit">Add</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>
            @Html.DisplayNameFor(model => model.Parent)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent.Name)
            </td>
            <td>
                <a asp-action="AddEdit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

</div>
</div>