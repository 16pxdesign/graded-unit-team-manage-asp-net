@model List<GuardianViewModel>

@foreach (var item in Model)
{
    <div class="card mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    <label>@item.Signature.ToString(string.Format("dd/MM/yyyy"))</label>
                </dt>
                <dd class="col-sm-3">
                    @item.Name @item.Surname
                </dd>
                <dd class="col-sm-3">
                    @item.Relationship
                </dd>
            </dl>
        </div>
    </div>
}