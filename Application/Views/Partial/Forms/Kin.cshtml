
@model KinViewModel

<div class="card mt-4">
    <div class="card-body">
        
        <h3 >Kin details</h3>
        <hr/>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control"/>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Relationship" class="control-label"></label>
                <input asp-for="Relationship" class="form-control"/>
                <span asp-validation-for="Relationship" class="text-danger"></span>
            </div>
        </div>

    </div>
</div>

@Html.EditorFor(m => m.Address, "~/Views/Partial/Forms/Address.cshtml")