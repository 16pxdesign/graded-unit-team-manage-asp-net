@using Application.Models
@model Application.Models.TrainingViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<script src="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js"
        type="text/javascript"></script>

<form method="post">
    <div asp-validation-summary="All">

    </div>


    @Html.EditorFor(m => m, "~/Views/Partial/Forms/Training.cshtml")


    @await Html.PartialAsync("_Activities", Model)

    @Html.EditorFor(m => m, "~/Views/Partial/Forms/Attendance.cshtml")


    <div class="form-row mt-4">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" class="btn btn-primary " value="Submit" id="trainingSave"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <a class="btn btn-link" asp-controller="Training" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</form>


<!-- Modal placeholder -->
<div id="modal-placeholder"></div>
<script src="~/js/modal.js" asp-append-version="true" defer></script>

<link href="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css"
      rel="stylesheet" type="text/css"/>

<script>
    $('.multiselect').multiselect({
        nonSelectedText: 'Select',
        buttonWidth: '400px'
    });

</script>