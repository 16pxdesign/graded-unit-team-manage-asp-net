@model List<MemberViewModel>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-title text-center mt-4"><h4 class="">Player skills list</h4></div>
    <div class="card-body">
        <a asp-controller="Skill" asp-action="Index" >Add Categories / Skills</a>

        <table id="MembersList" class="table mt-1">
            <thead>
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            @foreach (var item in Model) {
                <tr>
                    <td>
                        <label>@item.SRU</label>
                    </td>
                    <td>
                        <label>@item.Name @item.Surname</label>
                    </td>
           
                    <td class="text-right">
                        <a asp-action="Evaluate" asp-route-id="@item.SRU">Evaluate</a>
                    </td>
                </tr>
            }
    
            </tbody>
        </table>

    </div>
</div>
